<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.*?>
<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.tobiashh.javafx.Controller">
   <top>
      <MenuBar fx:id="menuBar" focusTraversable="true" BorderPane.alignment="CENTER">
         <Menu text="Datei">
            <MenuItem onAction="#processOpen" text="Öffnen" />
            <MenuItem onAction="#processTilesPath" text="Tiles Pfad" />
            <MenuItem text="Speichern" />
            <SeparatorMenuItem />
            <MenuItem onAction="#processExit" text="Beenden" />
         </Menu>
         <Menu text="Einstellungen">
            <MenuItem text="..." />
         </Menu>
         <Menu text="Hilfe">
            <MenuItem onAction="#showAboutDialog" text="Über" />
         </Menu>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <HBox alignment="CENTER">
            <Button mnemonicParsing="false" onAction="#reloadImage" text="Neu laden">
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
            </Button>
            <Button layoutX="37.0" layoutY="10.0" mnemonicParsing="false" onAction="#recalculateImage"
                    text="Neu berechnen">
               <HBox.margin>
                  <Insets right="10.0"/>
               </HBox.margin>
            </Button>
            <CheckBox fx:id="originalCheck" mnemonicParsing="false" onAction="#originalCheckAction" text="Original"/>
         </HBox>
         <ScrollPane fx:id="scrollPane" onDragDropped="#dragDropped" onDragOver="#dragOver" pannable="true" VBox.vgrow="ALWAYS">
            <Pane fx:id="canvasPane">
               <Canvas fx:id="canvas" height="93.0" width="200.0" />
            </Pane>
         </ScrollPane>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <Label fx:id="cursorPositionLabel" style="-fx-background-color: RED;" />
         <Label fx:id="tileHoverLabel" style="-fx-background-color: PURPLE;" />
         <Label fx:id="fileLabel" style="-fx-background-color: GREEN;" />
         <Label fx:id="pathLabel" style="-fx-background-color: BLUE;" />
         <Label fx:id="filesCountLabel" style="-fx-background-color: ORANGE;" />
      </HBox>
   </bottom>
</BorderPane>
