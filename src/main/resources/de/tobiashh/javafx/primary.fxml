<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.canvas.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<BorderPane prefHeight="200.0" prefWidth="200.0" xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="de.tobiashh.javafx.Controller">
   <top>
      <MenuBar fx:id="menuBar" focusTraversable="true" BorderPane.alignment="CENTER">
         <Menu text="Datei">
            <MenuItem onAction="#processOpen" text="Öffnen" />
            <MenuItem text="Speichern" />
            <SeparatorMenuItem />
            <MenuItem onAction="#processExit" text="Beenden" />
         </Menu>
         <Menu text="Einstellungen">
            <MenuItem text="..." />
         </Menu>
         <Menu text="Hilfe">
            <MenuItem onAction="#showAboutDialog" text="Über" />
         </Menu>
      </MenuBar>
   </top>
   <center>
      <VBox alignment="CENTER" prefHeight="200.0" prefWidth="100.0" BorderPane.alignment="CENTER">
         <TextField />
         <ScrollPane fx:id="scrollPane" prefHeight="200.0" prefWidth="200.0" VBox.vgrow="ALWAYS">
            <Canvas fx:id="canvas" height="93.0" width="200.0" />
         </ScrollPane>
      </VBox>
   </center>
   <bottom>
      <HBox alignment="CENTER_LEFT" BorderPane.alignment="CENTER">
         <Label fx:id="cursorPositionLabel" style="-fx-background-color: RED;" />
         <Label fx:id="fileLabel" style="-fx-background-color: GREEN;" />
      </HBox>
   </bottom>
</BorderPane>
